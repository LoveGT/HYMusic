.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: 700;
}
.header .slot:empty + .right-default {
  display: flex;
}
.header .right-default {
  display: none;
  /* display: flex; */
  align-items: center;
  font-size: 28rpx;
  color: #777777;
}

.header .right-default .icon {
  width: 50rpx;
  height: 50rpx;
}