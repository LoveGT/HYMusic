page {
  padding: 0 20rpx;
}

.hot {
  padding: 10rpx;
}

.hot .list {
  display: flex;
  flex-wrap: wrap;
}

.hot .tag {
  font-size: 24rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.hot .tag:first-of-type {
  color: #26ce8a;
}

/* 建议搜索 */
.suggest {
  padding: 10rpx;
}

.suggest .title {
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.suggest .list-item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .list-item .icon {
  width: 66rpx;
  margin-left: -20rpx;
}

.suggest .list-item .text {
  font-size: 28rpx;
}